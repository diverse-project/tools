<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

	<extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.emf.ecoretools.registration.epackagesregistration"
            nameFilter="*.ecore"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
	         id="org.eclipse.emf.ecoretools.registration.epackagesregistration.subMenu"
	         label="%epackages.registration"
	         path="additions">
      		<separator name="emfregistration"/>
		</menu>
        <action
              class="org.eclipse.emf.ecoretools.registration.popup.actions.EcoreRegisteringAction"
              enablesFor="*"
              icon="icons/etool16/RegisterEcoreFile.gif"
              id="org.eclipse.emf.ecoretools.registration.EcoreRegister"
              label="%register.epackages.into.repository"
              menubarPath="org.eclipse.emf.ecoretools.registration.epackagesregistration.subMenu/emfregistration">
        </action>
       <action
               enablesFor="*"
               label="%unregister.epackages.into.repository"
               icon="icons/etool16/UnregisterEcoreFile.gif"
               menubarPath="org.eclipse.emf.ecoretools.registration.epackagesregistration.subMenu/emfregistration" 
               class="org.eclipse.emf.ecoretools.registration.popup.actions.EcoreUnregisteringAction"
               id="org.eclipse.emf.ecoretools.registration.EcoreUnregister"/>       
      </objectContribution>
	</extension>

   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.eclipse.emf.ecoretools.ui"
            class="org.eclipse.emf.ecoretools.registration.view.RegisteredPackageView"
            icon="icons/view16/RegisteredEPackage.gif"
            id="org.eclipse.emf.ecoretools.registration.viewregisteredpackages"
            name="%emf.registered.packages"/>
      <category
            id="org.eclipse.emf.ecoretools.ui"
            name="%ecoretools.view.category">
      </category>
   </extension>
   <extension
         id="EPackageAutoRegistrationBuilder"
         name="EPackage AutoRegistration Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.eclipse.emf.ecoretools.registration.builder.EPackageAutoRegistrationBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="EPackageAutoRegistrationNature"
         name="EPackage AutoRegistration Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.emf.ecoretools.registration.builder.EPackageAutoRegistrationNature">
         </run>
      </runtime>
      <builder
            id="org.eclipse.emf.ecoretools.registration.EPackageAutoRegistrationBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.emf.ecoretools.registration.EPackageAutoRegistrationNature.category"
            name="EPackage AutoRegistration Project Nature commands">
      </category>
      <command
            categoryId="org.eclipse.emf.ecoretools.registration.EPackageAutoRegistrationNature.category"
            defaultHandler="org.eclipse.emf.ecoretools.registration.builder.AddRemoveEPackageAutoRegistrationNatureHandler"
            id="org.eclipse.emf.ecoretools.registration.addRemoveEPackageAutoRegistrationNature"
            name="Add/RemoveEPackage AutoRegistration Project Nature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.eclipse.emf.ecoretools.registration.addRemoveEPackageAutoRegistrationNature"
               icon="icons/etool16/eclipse_ecore.gif"
               label="%disable.autoregister.builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.eclipse.emf.ecoretools.registration.EPackageAutoRegistrationNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.emf.ecoretools.registration.addRemoveEPackageAutoRegistrationNature"
               icon="icons/etool16/eclipse_ecore.gif"
               label="%enable.autoregister.builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.eclipse.emf.ecoretools.registration.EPackageAutoRegistrationNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="ecoreAutoRegisterProblem"
         name="EcoreAutoRegister Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
</plugin>
