<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<relativePath>../fr.inria.diverse.commons.eclipse.root/pom.xml</relativePath>
		<groupId>fr.inria.diverse.commons.eclipse</groupId>
		<artifactId>fr.inria.diverse.commons.eclipse.root</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
  	<artifactId>fr.inria.diverse.commons.eclipse.messagingsystem.api</artifactId>
	<packaging>eclipse-plugin</packaging>
  	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.8</version>
				<executions>
					<!-- manually copy features -->
					<!-- be careful to also update the manifest accordingly -->
					<execution>
						<id>copy</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>fr.inria.diverse.commons</groupId>
									<artifactId>fr.inria.diverse.commons.messagingsystem.api</artifactId>
									<version>1.0.0-SNAPSHOT</version>
									<outputDirectory>lib</outputDirectory>
									<destFileName>fr.inria.diverse.commons.messagingsystem.api.jar</destFileName>
									<overWrite>true</overWrite>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-dependency-plugin
										</artifactId>
										<versionRange>
											[2.4,)
										</versionRange>
										<goals>
											<goal>copy</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<repositories>
        <repository>
            <id>Inria Maven repository</id>
            <url>http://maven.inria.fr/artifactory/public/</url>
        </repository>
    </repositories>
</project>
