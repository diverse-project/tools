<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.emf.ecoretools.registration.epackagesregistration"
            nameFilter="*.ecore"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
	         id="org.eclipse.emf.ecoretools.registration.epackagesregistration.subMenu"
	         label="EPackages registration"
	         path="additions">
      		<separator name="emfregistration"/>
		</menu>
        <action
              class="org.eclipse.emf.ecoretools.registration.popup.actions.EcoreRegisteringAction"
              enablesFor="*"
              icon="images/RegisterEcoreFile.gif"
              id="org.eclipse.emf.ecoretools.registration.EcoreRegister"
              label="Register EPackages into repository"
              menubarPath="org.eclipse.emf.ecoretools.registration.epackagesregistration.subMenu/emfregistration">
        </action>
       <action
               enablesFor="*"
               label="Unregister EPackages from repository"
               icon="images/UnregisterEcoreFile.gif"
               menubarPath="org.eclipse.emf.ecoretools.registration.epackagesregistration.subMenu/emfregistration" 
               class="org.eclipse.emf.ecoretools.registration.popup.actions.EcoreUnregisteringAction"
               id="org.eclipse.emf.ecoretools.registration.EcoreUnregister"/>
       <action
              class="org.eclipse.emf.ecoretools.registration.popup.actions.EcoreReRegisteringAction"
              enablesFor="*"
              icon="images/RegisterEcoreFile.gif"
              id="org.eclipse.emf.ecoretools.registration.EcoreReRegister"
              label="Re-Register EPackages into repository"
              menubarPath="org.eclipse.emf.ecoretools.registration.epackagesregistration.subMenu/emfregistration">
        </action>       
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.eclipse.emf.ecoretools.registration.umlregistration"
            nameFilter="*.uml"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.eclipse.emf.ecoretools.registration.popup.actions.UMLRegisteringAction"
               enablesFor="*"
               icon="images/RegisterEcoreFile.gif"
               id="org.eclipse.emf.ecoretools.registration.UMLRegister"
               label="Register EPackages from UML profile file"
               menubarPath="org.eclipse.emf.ecoretools.registration.umlepackagesregistration.subMenu/umlregistration">
         </action>
         <menu
               id="org.eclipse.emf.ecoretools.registration.umlepackagesregistration.subMenu"
               label="EPackages registration"
               path="additions">
            <separator
                  name="umlregistration">
            </separator>
         </menu>
      </objectContribution>
	</extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="EPackages registration"
            id="org.eclipse.emf.ecoretools.registration.view">
      </category>
      <view
            allowMultiple="false"
            category="org.eclipse.emf.ecoretools.registration.view"
            class="org.eclipse.emf.ecoretools.registration.view.RegisteredPackageView"
            icon="images/RegisteredEPackage.gif"
            id="org.eclipse.emf.ecoretools.registration.viewregisteredpackages"
            name="EMF registered packages"/>
   </extension>
   <extension
         id="ecoreAutoRegisterBuilder"
         name="EcoreAutoRegister Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.eclipse.emf.ecoretools.registration.ui.builder.EcoreAutoRegisterBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="ecoreAutoRegisterNature"
         name="EcoreAutoRegister Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.emf.ecoretools.registration.ui.builder.EcoreAutoRegisterNature">
         </run>
      </runtime>
      <builder
            id="org.eclipse.emf.ecoretools.registration.ui.ecoreAutoRegisterBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.emf.ecoretools.registration.ui.ecoreAutoRegisterNature.category"
            name="EcoreAutoRegister Nature commands">
      </category>
      <command
            categoryId="org.eclipse.emf.ecoretools.registration.ui.ecoreAutoRegisterNature.category"
            defaultHandler="org.eclipse.emf.ecoretools.registration.ui.builder.AddRemoveEcoreAutoRegisterNatureHandler"
            id="org.eclipse.emf.ecoretools.registration.ui.addRemoveEcoreAutoRegisterNature"
            name="Add/RemoveEcoreAutoRegister Nature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.eclipse.emf.ecoretools.registration.ui.addRemoveEcoreAutoRegisterNature"
               label="Disable EcoreAutoRegister builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.eclipse.emf.ecoretools.registration.ui.ecoreAutoRegisterNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.emf.ecoretools.registration.ui.addRemoveEcoreAutoRegisterNature"
               label="Enable EcoreAutoRegister builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.eclipse.emf.ecoretools.registration.ui.ecoreAutoRegisterNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="ecoreAutoRegisterProblem"
         name="EcoreAutoRegister Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.eclipse.emf.ecoretools.registration.ui.EarlyStartUp">
      </startup>
   </extension>
</plugin>
