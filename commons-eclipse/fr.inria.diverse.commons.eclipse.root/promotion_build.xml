<project name="diverse_commons_updatesite" default="upload">
	<!-- configuration properties -->		
	<!-- project configuration -->
	<property environment="env"/>

	<property name="env.WORKSPACE" location="."/>
	<property name="updatesite.repository" location="${env.WORKSPACE}/commons-eclipse/fr.inria.diverse.commons.eclipse.root/p2updatesite/target/repository/"/>
	<property name="deploy.server" value="www.irisa.fr"/>
	<property name="deploy.user" value="web-diverse"/>
	<property name="deploy.path" value="/home/web/apache/sites/kermeta.org/htdocs/diverse-commons"/>
	

	<tstamp>
	  <format property="TODAY_UK"
	          pattern="yyyy-MM-dd"
	          locale="en,UK"/>
	</tstamp>
	
	<target name="upload" >
		<echo>${TODAY_UK}</echo>
		<chmod perm="g+w">
			<fileset dir="${updatesite.repository}">
			    <include name="**/**"/>
			 </fileset>
		</chmod>
		<sshexec host="${deploy.server}"
		         username="${deploy.user}"
				 keyfile="${key.file}"
				 passphrase=""
			     trust="yes"
			     command="rm -Rf ${deploy.path}/update;  
						  mkdir ${deploy.path}/update;
						  rm -Rf ${deploy.path}/update_${TODAY_UK};
						  mkdir ${deploy.path}/update_${TODAY_UK};"/>
		<echo>Uploading to ${deploy.server}:${deploy.path}/update</echo>
		<scp todir="${deploy.user}@${deploy.server}:${deploy.path}/update"
			keyfile="${key.file}"
			passphrase=""
		    trust="yes">
		    <fileset dir="${updatesite.repository}">
		      <include name="**/**"/>
		    </fileset>
		</scp>
		<echo>Uploading to ${deploy.server}:${deploy.path}/update_${TODAY_UK}</echo>
		<scp todir="${deploy.user}@${deploy.server}:${deploy.path}/update_${TODAY_UK}"
					keyfile="${key.file}"
					passphrase=""
				    trust="yes">
				    <fileset dir="${updatesite.repository}">
				      <include name="**/**"/>
				    </fileset>
				</scp>
		
	</target>
</project>